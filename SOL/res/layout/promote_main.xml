<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1BA6F"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Promote General Responsibility"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHARE IT"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="left" >

        <ImageView
            android:id="@+id/imageView1"
			android:layout_width="130dp"
            android:layout_height="110dp"
            android:layout_gravity="left"
            android:src="@drawable/share_1" />

        <ImageView
            android:id="@+id/imageView2"
			android:layout_width="130dp"
            android:layout_height="110dp"
            android:src="@drawable/share_2" />

        <ImageView
            android:id="@+id/imageView3"
			android:layout_width="130dp"
            android:layout_height="110dp"
            android:src="@drawable/share_4" />
    </LinearLayout>

    <TextView
        android:id="@+id/instagramButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="FOLLOW US ON INSTAGRAM" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="LIVE IT"
        android:textSize="25sp" />
<LinearLayout
    android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    <ImageView
        android:id="@+id/imageView4"
			android:layout_width="130dp"
            android:layout_height="110dp"
        android:src="@drawable/live_1" />

    <ImageView
        android:id="@+id/imageView6"
			android:layout_width="130dp"
            android:layout_height="110dp"
        android:src="@drawable/live_3" />

    <ImageView
        android:id="@+id/imageView5"
			android:layout_width="130dp"
            android:layout_height="110dp"
        android:src="@drawable/live_2" />

    
        
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center" >

    <Button
        android:id="@+id/visionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Our Vision"
        android:textSize="15sp" />

    <Button
        android:id="@+id/membershipButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Membership"
        android:textSize="15sp" />

    <Button
        android:id="@+id/conservationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Our Programs"
        android:textSize="15sp" />

</LinearLayout>

<Button
    android:id="@+id/donateButton2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:text="Donate Online"
    android:textSize="30sp" />

</LinearLayout>
